{
  "manifest_version": 3,
  "name": "fast-label-printering",
  "description": "Print Inventory labels from IDoit using ZPL on Zebra printers",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "fast-label-printering@jszeibert.github.io",
      "update_url": "https://jszeibert.github.io/fast-label-printering/update.json"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_icon": "icons/label.png",
    "default_title": "Fast Label Printer",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
